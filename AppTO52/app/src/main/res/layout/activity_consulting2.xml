<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bienvenustock_textview"
                android:layout_width="364dp"
                android:layout_height="94dp"
                android:layout_weight="3.60"
                android:gravity="center"
                android:text="Affichage des données du capteur "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperature_viewer"
                android:layout_width="197dp"
                android:layout_height="159dp"
                android:text="Température:"></TextView>

            <TextView
                android:id="@+id/temptextview"
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:hint="Température"
                tools:layout_editor_absoluteX="91dp"
                tools:layout_editor_absoluteY="133dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/profondeur_viewer"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:text="Profondeur"></TextView>

            <TextView
                android:id="@+id/profondeur_textview"
                android:layout_width="200dp"
                android:layout_height="57dp"
                android:hint="Profondeur"
                tools:layout_editor_absoluteX="91dp"
                tools:layout_editor_absoluteY="133dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/Archive_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ARCHIVES" />


    </LinearLayout>

</LinearLayout>